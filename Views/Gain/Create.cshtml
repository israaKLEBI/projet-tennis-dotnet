@model TennisShopApp.Data.Models.Gain
@{
    ViewData["Title"] = "Ajouter un Gain";
}
<div class="card">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">Ajouter un Gain</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="CodeT">Tournoi</label>
                <select asp-for="CodeT" class="form-control" asp-items="@(new SelectList(ViewBag.Tournois, "CodeT", "NomT"))"></select>
            </div>
            <div class="form-group">
                <label for="CodeJ">Joueur</label>
                <select asp-for="CodeJ" class="form-control" asp-items="@(new SelectList(ViewBag.Joueurs, "CodeJ", "NomPrenom"))"></select>
            </div>
            <div class="form-group">
                <label for="CodePh">Phase</label>
                <select asp-for="CodePh" class="form-control" asp-items="@(new SelectList(ViewBag.Phases, "CodePh", "LibellePh"))"></select> <!-- Changed to LibellePh -->
            </div>
            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">Cr√©er</button>
            </div>
        </form>
        <div class="d-grid mt-3">
            <a asp-action="Index" class="btn btn-secondary">Retour</a>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}