@model TennisShopApp.Data.Models.Phase
@{
    ViewData["Title"] = "Ajouter une Phase";
}
<div class="card">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">Ajouter une Phase</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LibellePh" class="control-label">Nom de la Phase</label>
                <input asp-for="LibellePh" class="form-control" required />
                <span asp-validation-for="LibellePh" class="text-danger"></span>
            </div>
            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">Cr√©er</button>
            </div>
        </form>
        <div class="d-grid mt-3">
            <a asp-action="Index" class="btn btn-secondary">Retour</a>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}