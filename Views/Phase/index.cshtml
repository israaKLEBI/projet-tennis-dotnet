@model IEnumerable<TennisShopApp.Data.Models.Phase>
@{
    ViewData["Title"] = "Phases";
}
<div class="card">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">Liste des Phases</h3>
    </div>
    <div class="card-body">
        <a asp-action="Create" class="btn btn-primary mb-3">Ajouter une Phase</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom de la Phase</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LibellePh</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>