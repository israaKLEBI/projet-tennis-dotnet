@model IEnumerable<TennisShopApp.Data.Models.Tournoi>
@{
    ViewData["Title"] = "Tournois";
}
<div class="card">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">Liste des Tournois</h3>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-primary">Ajouter un Tournoi</a>
        </p>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Ville</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NomT</td>
                        <td>@item.Ville</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CodeT" class="btn btn-sm btn-warning">Modifier</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>