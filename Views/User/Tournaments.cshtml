@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Tournois (Utilisateur)";
}
<div class="card">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">Liste des Tournois</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Ville</th>
                    <th>Gains Associ√©s</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NomT</td>
                        <td>@item.Ville</td>
                        <td>@item.GainCount</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-grid mt-3">
            <a asp-action="Dashboard" class="btn btn-primary">Retour au Tableau de Bord</a>
        </div>
    </div>
</div>